{
    "name": "vibe/ai-entity-index",
    "description": "Semantic Truth Layer for WordPress - Extract, normalize, and link named entities with Schema.org JSON-LD output",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Vibe Architect",
            "homepage": "https://vibeai.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "woocommerce/action-scheduler": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Vibe\\AIIndex\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if(!is_dir('vendor/woocommerce/action-scheduler/classes')){echo 'Warning: Action Scheduler not properly installed';}\""
        ]
    }
}
